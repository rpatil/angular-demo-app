<div class="col-md-3">
  <p class="lead">Example List</p>
  <div class="list-group">
    <a id="spa" href="/SPA" class="list-group-item">SPA</a>
    <a id="directives" href="/Directives" class="list-group-item">Directives</a>
    <a id="filters" href="/Filters" class="list-group-item">Filters</a>
    <a id="view_model" href="/ViewModel" class="list-group-item">ViewModel (Views + Controller)</a>






    <a id="data_bindings" href="/DataBinding" class="list-group-item">Data Bindings</a>
  </div>
</div>


<script type="text/javascript">

  $(function() {
    set_page_navigation_active();
  });

  function set_page_navigation_active() {
    switch ('<%=controller.action_name%>') {
      case 'spa':
        $('#spa').addClass("active");
        $("#spa").attr("href", "#")
        break;
      case 'directives':
        $('#directives').addClass("active");
        $("#directives").attr("href", "#")
        break;
      case 'filters':
        $('#filters').addClass("active");
        $("#filters").attr("href", "#")
        break;
      case 'data_bindings':
        $('#data_bindings').addClass("active");
        $("#data_bindings").attr("href", "#")
        break;
      case 'view_model':
        $('#view_model').addClass("active");
        $("#view_model").attr("href", "#")
        break;
    }
    
    //$('#'+action_name).addClass("active");
    //$("#"+action_name).attr("href", "#");
  }

</script>